<h1>Edit <%=@figure.name%></h1>

<form class="" action="/figures/<%=@figure.id%>" method="post">
  <input type="hidden" name="_method" value="patch">

  <label>Figure Name: </label>
  <input type="text" id="figure_name" name="figure[name]" value="<%=@figure.name%>"><br></br>

  <label> Title: </label><br>
    <% Title.all.each do |title| %>
      <input id="title_<%=title.id%>" type="checkbox" name="figure[title_ids][]" value="<%= title.id %>" <%='checked' if @figure.titles.include?(title)%>><%=title.name%></input><br>
    <% end %><br>
    <label for="new_title">and/or create a new title:</label>
    <input type="text" id= "new_title" name="title[name]" value="">
  <br></br>

  <label for="figure_landmark">Landmarks:</label><br>
  <% Landmark.all.each do |landmark| %>
    <input id="landmark_<%=landmark.id%>" type="checkbox" name="figure[landmark_ids][]" value="<%= landmark.id %>"<%='checked' if @figure.landmarks.include?(landmark)%>><%=landmark.name%></input><br>
  <% end %><br>
  <label for="new_landmark">and/or create a new landmark:</label>
  <input type="text" id= "new_landmark" name="landmark[name]" value="">
<br></br>

  <input type="submit" name="" value="Edit Figure">
</form>
